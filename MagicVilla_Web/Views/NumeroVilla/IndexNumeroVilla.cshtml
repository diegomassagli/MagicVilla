@model IEnumerable<MagicVilla_Web.Models.Dto.NumeroVillaDto>
@using MagicVilla_Utilidad
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor httpContextAcc


@{
    ViewData["Title"] = "IndexNumeroVilla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Lista de Numero de Villas</h1>
        </div>
        <div class="col text-end pt-1">
            @if (httpContextAcc.HttpContext.Session.GetString(DS.SessionToken) != null && httpContextAcc.HttpContext.Session.GetString(DS.SessionToken).ToString().Length > 0)
            {                
                <a asp-controller="NumeroVilla" asp-action="CrearNumeroVilla" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i>Crear Nuevo Numero Villa</a>
            }
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Nombre de la Villa</th>
                <th>Numero de la Villa</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Villa.Nombre</td>
                    <td>@item.VillaNro</td>
                    <td>
                        <a asp-controller="NumeroVilla" asp-action="ActualizarNumeroVilla" asp-route-villaNro="@item.VillaNro" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="NumeroVilla" asp-action="RemoverNumeroVilla" asp-route-villaNro="@item.VillaNro" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


